{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pipeline",
  "type": "object",
  "properties": {
    "root_path": { "type": "string" },
    "shaders": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": { "type": "string" }
    },
    "options": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "filter_linear": { "type": "boolean" },
          "scale_type": {
            "type": "array",
            "items": { "type": "string", "enum": ["absolute", "source", "viewport"] },
            "minItems": 1,
            "maxItems": 2
          },
          "scale": {
            "type": "array",
            "items": { "type": "number" },
            "minItems": 1,
            "maxItems": 2
          }
        },
        "additionalProperties": true
      }
    },
    "parameters": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": [
    "root_path",
    "shaders"
  ],
  "additionalProperties": true
}
